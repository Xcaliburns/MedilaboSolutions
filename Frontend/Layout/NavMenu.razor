@using Frontend.Services
@inject AuthService AuthService



<div class="top-row ps-3 navbar">
    <div class="container-fluid">
        <a class="navbar-brand text-black" href="">MEDILABO Solutions</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="">☰</span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link text-black" href="" Match="NavLinkMatch.All">
                Accueil
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link text-black" href="newpatient">
                Ajouter un patient
            </NavLink>
        </div>
        <div class="nav-item px-3 ">
            <NavLink class="nav-link text-black" href="login">
                Login
            </NavLink>
        </div>
        <div class="nav-item px-3 text-black">
            <button @onclick="Logout">
                Logout
            </button>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        await AuthService.Logout();
    }
}
